---
const { color, text } = Astro.props;
const size = "25px";
---

<div
    class="relative flex h-9 flex-nowrap flex-row items-center justify-start mb-1"
>
    <span>
        <svg
            class="opacity-0 absolute icon-arrow"
            fill={`#${ color }`}
            width={ size }
            height={ size }
            viewBox="0 0 210.2 207"
            xml:space="preserve"
        >
            <polygon
                points="167.8,103.5 105.1,139.7 42.4,175.8 42.4,103.5 42.4,31.1 105.1,67.3 "
            ></polygon>
        </svg>

        <svg
            class="icon-check opacity-0"
            fill={`#${ color }`}
            width={ size }
            height={ size }
            viewBox="0 0 210.2 207"
            xml:space="preserve"
        >
            <g>
                <path
                    class="st0"
                    d="M105.1,28.3c-20,0-39.1,7.9-53.2,22s-22,33.2-22,53.2s7.9,39.1,22,53.2c14.1,14.1,33.2,22,53.2,22
            s39.1-7.9,53.2-22s22-33.2,22-53.2s-7.9-39.1-22-53.2S125,28.3,105.1,28.3z M105.1,164.1c-16.1,0-31.5-6.4-42.9-17.8
            c-11.4-11.4-17.8-26.8-17.8-42.9S50.8,72,62.2,60.6S89,42.8,105.1,42.8s31.5,6.4,42.9,17.8s17.8,26.8,17.8,42.9
            s-6.4,31.5-17.8,42.9C136.6,157.8,121.2,164.1,105.1,164.1z"
                ></path>
                <path
                    class="st0"
                    d="M97.8,112.6L81.1,95.9l-10.3,10.3L92.7,128l0,0c1.4,1.4,3.2,2.1,5.1,2.1s3.8-0.8,5.1-2.1l38.8-38.8l-10.3-10.3
            L97.8,112.6z"
                ></path>
            </g>
        </svg>
    </span>
    <span
        class:list={[
            "music tracking-widest",
            { "text-[#FFDB3E] text-3xl": color == "FFDB3E" },
            { "text-[#EA3651] text-[42px]": color == "EA3651" },
            { "text-[#0442C5] text-[46px]": color == "0442C5" },
        ]}>{ text }</span
    >
</div>
