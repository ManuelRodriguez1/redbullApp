---
import ProgressBar from "./progressBar.astro";
---

<div id="screenLoading" class="fixed top-0 left-0 w-screen h-screen z-10 flex flex-col justify-center items-center opacity-0">
    <div class="flex items-center">
        <span class="loader_2 w-12 h-12 border-4 border-solid border-white border-b-[#ff3d00] rounded-full inline-block box-border"></span>
        <p class="text-white uppercase ml-3">Uploading...</p>
    </div>
    <p class="text-white mt-1">Tu video se esta cargando</p>
</div>
<img src="./frame.png" class="fixed top-0 left-0 h-screen" alt="">
<video id="videoRecording" class="h-screen w-screen object-cover" autoplay muted></video>
<audio id="beat" controls class="hidden">
    <source type="audio/mp3" src="./beat_mix.mp3" />
</audio>

<div class=" p-1 fixed z-20 left-1/4 -translate-x-2/4 bottom-6 grid align-middle hover:border-none">
    <button id="rec"
        class="bg-red-600 border-4 border-white border-solid rounded-full w-16 h-16 hover:w-[68px] hover:h-[68px] transition ease-out"></button>
</div>
<div class="p-1 fixed z-20 left-3/4 -translate-x-2/4 bottom-6 grid align-middle hover:border-none">
    <button id="stop"
        class="bg-gray-600 border-4 border-white border-solid rounded-lg w-16 h-16 hover:w-[68px] hover:h-[68px] transition ease-out"></button>
</div>

<ProgressBar />

<script src="../../ts/recordVideo.ts"></script>
