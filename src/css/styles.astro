<style is:global>
  @font-face {
    font-family: "Adieu-Bold";
    src: local("Adieu-Bold"), url("./Adieu-Bold.otf") format("opentype");
  }
  @font-face {
    font-family: "Bull-Regular";
    src: local("Bull-Regular"), url("./Bull-Regular.otf") format("opentype");
  }

  .loader_2 {
    animation: rotation 1s linear infinite;
  }

  .proB,
  .music, .font-Adieu {
    font-family: "Adieu-Bold";
  }
  .font-bull{
    font-family: "Bull-Regular";
  }

  .barra-animada {
    animation: llenarBarra 20s linear forwards;
  }
  .numbers{
    animation: increaseNumber 20s steps(101);
  }

  .logoRb{
    transform: translateY(-14vh);
    width: 300px;
    height: 308px;
    animation: logoIntro .5s linear;
  }

  @keyframes increaseNumber {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-151.5rem);
    } /* 101 pasos, multiplicas los pasos por la altura del numero, en este caso 1.5rem */
  }
  @keyframes llenarBarra {
    0% {
      width: 0%;
    }
    100% {
      width: 100%;
    }
  }

  @keyframes rotation {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes logoIntro { 
    0% {
      transform: translateY(0);
      width: 398px;
      height: 408px;
    }
    100% {
      transform: translateY(-14vh);
      width: 300px;
      height: 308px;
    }
  }
</style>
